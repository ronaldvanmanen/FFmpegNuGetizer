{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "Host": {
      "type": "string",
      "enum": [
        "AppVeyor",
        "AzurePipelines",
        "Bamboo",
        "Bitbucket",
        "Bitrise",
        "GitHubActions",
        "GitLab",
        "Jenkins",
        "Rider",
        "SpaceAutomation",
        "TeamCity",
        "Terminal",
        "TravisCI",
        "VisualStudio",
        "VSCode"
      ]
    },
    "ExecutableTarget": {
      "type": "string",
      "enum": [
        "BuildMultiplatformPackage",
        "BuildPortPackage",
        "BuildRuntimePackage",
        "Clean",
        "PublishPackage",
        "SetupBuildDependencies",
        "SetupNuGet",
        "SetupVcpkg"
      ]
    },
    "Verbosity": {
      "type": "string",
      "description": "",
      "enum": [
        "Verbose",
        "Normal",
        "Minimal",
        "Quiet"
      ]
    },
    "NukeBuild": {
      "properties": {
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "description": "Host for execution. Default is 'automatic'",
          "$ref": "#/definitions/Host"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Verbosity": {
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "$ref": "#/definitions/Verbosity"
        }
      }
    }
  },
  "allOf": [
    {
      "properties": {
        "AzureToken": {
          "type": "string",
          "description": "The Azure DevOps personal access token",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "GitHubToken": {
          "type": "string",
          "description": "The GitHub personal access token",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "NuGetAuthors": {
          "type": "array",
          "description": "Specifiy the NuGet package authors",
          "items": {
            "type": "string"
          }
        },
        "NuGetLicense": {
          "type": "string",
          "description": "Specify the NuGet package's license"
        },
        "NuGetPackageID": {
          "type": "string",
          "description": "Specify the NuGet package identifier"
        },
        "NuGetProjectUrl": {
          "type": "string",
          "description": "Specify the NuGet package's home page"
        },
        "NuGetRepositoryUrl": {
          "type": "string",
          "description": "Specify the NuGet package's reposity URL"
        },
        "VcpkgBinarySources": {
          "type": "array",
          "description": "Specify the source(s) to use for binary caching",
          "items": {
            "type": "string"
          }
        },
        "VcpkgDefaultFeatures": {
          "type": "boolean",
          "description": "Specify whether the default features of the specified package should be installed or not"
        },
        "VcpkgFeatures": {
          "type": "array",
          "description": "Specify which optional features of the specified package to install",
          "items": {
            "type": "string"
          }
        },
        "VcpkgPackageName": {
          "type": "string",
          "description": "Specify which package to install"
        },
        "VcpkgPackageVersion": {
          "type": "string",
          "description": "Specify which version of the specified package to install"
        },
        "VcpkgTriplets": {
          "type": "array",
          "description": "Specify the target architecture triplet(s)",
          "items": {
            "type": "string"
          }
        }
      }
    },
    {
      "$ref": "#/definitions/NukeBuild"
    }
  ]
}
